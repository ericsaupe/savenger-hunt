<% description "Results for the scavenger hunt #{@hunt.name}." %>

<h1 class="font-serif my-4 text-center uppercase text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl"><%= title "#{@hunt.name} Results" %></h1>

<% if @hunt.results_locked? %>
  <%= render partial: 'locked_results', locals: { hunt: @hunt } %>
<% else %>
  <div class="grid grid-cols-2 mb-4">
    <p class="my-auto m-4 text-lg sm:text-xl sm:tracking-tight lg:text-2xl text-gray-600">Let's see how everyone did!</p>
    <div class="grid grid-cols-1 place-items-end">
      <div>
        <%= link_to download_results_hunt_path(@hunt.code.upcase),
                    target: '_blank',
                    class: 'text-black rounded-md border border-transparent px-4 py-1 mx-4 bg-gray-100 text-base font-medium shadow hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-600 text-center',
                    rel: 'noopener',
                    data: {
                      controller: 'download',
                      action: 'click->download#toggleDownload',
                      'download-filename-value': @hunt.name.to_s
                    } do %>
          <ion-icon name="cloud-download-outline" data-download-target="icon"></ion-icon> Download
        <% end %>
      </div>
    </div>
  </div>

  <div class="flex flex-col my-2">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Name
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-center">
                  Submissions
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider text-center">
                  Score
                </th>
              </tr>
            </thead>
            <tbody>
              <% @results.each_with_index do |result, i| %>
                <tr class="<%= results_text_size(i) %> text-gray-900 <%= i.odd? ? 'bg-white' : 'bg-gray-50' %>">
                  <td class="px-6 py-4 whitespace-nowrap font-medium">
                    <%= result[:name] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <%= result[:submissions] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <%= result[:score] %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%= render partial: 'hunts/hunt', locals: { results: true } %>
<% end %>
