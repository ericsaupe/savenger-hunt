<div class="hidden fixed z-10 inset-0 overflow-y-auto pointer-events-none" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-hunt-target="modal">
  <div class="flex items-end justify-center pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div id="overlay" class="opacity-0 fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" data-action="click->hunt#closeModal"></div>

    <!-- This element is to trick the browser into centering the modal contents. -->
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <div id="panel" class="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95 inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle <%= local_assigns[:fullscreen] ? 'sm:max-w-6xl sm:w-full sm:max-h-full' : 'sm:max-w-lg sm:w-full' %>">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <h3 class="min-w-full text-center uppercase text-lg leading-6 font-medium text-gray-900" id="title"></h3>
            <div class="mt-2 h-full w-full bg-gray-100 flex" id="content"></div>
          </div>
        </div>
      </div>
      <% unless local_assigns[:fullscreen] %>
        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <button type="button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm" data-action="click->hunt#clickForm">
            Change
          </button>
          <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" data-action="click->hunt#closeModal">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
