<% description "#{@item.name} was found #{pluralize(@submissions.size, 'times')} during #{@hunt.name}." %>

<%= render(PageHeaderComponent.new(title: @hunt.name)) %>

<div class="grid grid-cols-3 gap-2 mx-auto my-4 font-sans text-center uppercase font-bold">
  <%= link_to hunt_item_path(@hunt.code, @previous), class: "btn btn-ghost my-auto text-ellipsis" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
    </svg>
    <span class="hidden sm:block"><%= @previous.name %></span>
  <% end %>
  <h2 class="text-2xl sm:text-2xl sm:tracking-tight lg:text-3xl"><%= title @item.name %></h2>
  <%= link_to hunt_item_path(@hunt.code, @next), class: "btn btn-ghost my-auto text-ellipsis" do %>
    <span class="hidden sm:block"><%= @next.name %></span>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
    </svg>
  <% end %>
</div>

<% if @submissions.empty? %>
  <div class="container grid grid-cols-1 gap-2 mx-auto">
    <h3 class="text-2xl sm:text-2xl sm:tracking-tight lg:text-3xl text-center">Huh, I guess nobody found this one.</h2>
    <div class="w-2/4 mx-auto rounded shadow-xl animate__animated animate__fadeIn">
      <%= image_tag 'nothing.png' %>
    </div>
  </div>
<% else %>
  <div class="sm:grid sm:grid-cols-4 sm:gap-4">
    <div class="col-span-3">
      <div class="carousel w-full">
        <% @submissions.each do |submission| %>
          <div id="<%= submission.id %>" class="carousel-item w-full justify-center">
            <% image_url = submission_attachment_url(submission, variant_size: :large) %>
            <% if submission.video? %>
              <%= video_tag(image_url, controls: true, class: "w-full h-fit max-h-screen sm:pt-24") %>
            <% else %>
              <%= image_tag(image_url, class: "h-fit max-h-screen sm:pt-24") %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="flex justify-center w-full py-2 gap-2">
        <% @submissions.each_with_index do |submission, i| %>
          <a href="#<%= submission.id %>" class="btn btn-xs"><%= i + 1 %></a>
        <% end %>
      </div>
    </div>
    <div class="sm:mt-24">
      <div class="chat chat-start">
        <div class="chat-image avatar">
          <div class="w-10 rounded-full">
            <img src="https://daisyui.com/images/stock/photo-1534528741775-53994a69daeb.jpg" />
          </div>
        </div>
        <div class="chat-bubble">It was said that you would, destroy the Sith, not join them.</div>
      </div>
      <div class="chat chat-start">
        <div class="chat-image avatar">
          <div class="w-10 rounded-full">
            <img src="https://daisyui.com/images/stock/photo-1534528741775-53994a69daeb.jpg" />
          </div>
        </div>
        <div class="chat-bubble">It was you who would bring balance to the Force</div>
      </div>
      <div class="chat chat-start">
        <div class="chat-image avatar">
          <div class="w-10 rounded-full">
            <img src="https://daisyui.com/images/stock/photo-1534528741775-53994a69daeb.jpg" />
          </div>
        </div>
        <div class="chat-bubble">Not leave it in Darkness</div>
      </div>
    </div>
  </div>
<% end %>
